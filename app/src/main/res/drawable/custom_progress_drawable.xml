<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#5A5A5A"/> <!-- Gray color for unprogressed part -->
        </shape>
    </item>

    <!-- Progress (Progressed part) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <solid android:color="#FFFFFF"/> <!-- White color for progressed part -->
            </shape>
        </clip>
    </item>
</layer-list>